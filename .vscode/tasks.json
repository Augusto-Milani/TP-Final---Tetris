{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file with Allegro",
            "command": "/usr/bin/gcc",
            "args": [
    "-fdiagnostics-color=always",
    "-g",
    "${file}",
    "-o",
    "${fileDirname}/${fileBasenameNoExtension}",
    "-I/usr/include/x86_64-linux-gnu",
    "-lallegro",
    "-lallegro_image",
    "-lallegro_ttf",
    "-lallegro_font",
    "-lallegro_acodec",
    "-lallegro_audio"
]
,
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task configured to build Allegro programs."
        }
    ],
    "version": "2.0.0"
}
